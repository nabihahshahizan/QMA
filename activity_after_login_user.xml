<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8D8F8"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/buttonProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonCheckup"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-425dp"
        android:layout_marginEnd="9dp"
        android:backgroundTint="#040580"
        android:gravity="center"
        android:text="@string/profile" />

    <Button
        android:id="@+id/buttonCountdown"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:backgroundTint="#040580"
        android:text="@string/countdown" />

    <Button
        android:id="@+id/buttonCheckup"
        android:layout_below="@id/buttonCountdown"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:backgroundTint="#040580"
        android:text="@string/check_up"/>

</RelativeLayout>
